<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Circle?>

<fx:root alignment="TOP_RIGHT" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="dialog" text="Label" wrapText="true">
            <padding>
                <Insets left="5.0" right="5.0"/>
            </padding>
        </Label>
        <ImageView fx:id="displayPicture" fitHeight="50.0" fitWidth="50.0"  preserveRatio="true">
            <clip>
                <Circle radius="25.0" centerX="25.0" centerY="25.0" />
            </clip>
        </ImageView>
    </children>
    <padding>
        <Insets bottom="15.0" left="7.0" right="7.0" top="15.0" />
    </padding>
</fx:root>

